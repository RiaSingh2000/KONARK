<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.konarktimes.konark">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SelectedCategoryActivity"
            android:parentActivityName=".HomeActivity"></activity>
        <activity
            android:name=".SeeMoreFeaturedActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".SeeMoreLatestActivity"
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".NotificationActivity" />
        <activity
            android:name=".SearchActivity"
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".DetailsActivity" />
        <activity android:name=".Wizard" />
        <activity android:name=".LanguageActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CategoryActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".HomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>