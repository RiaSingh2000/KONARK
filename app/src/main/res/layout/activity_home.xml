<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/drawer_layout"
    tools:openDrawer="start">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/overlay_light_80">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="@color/overlay_light_60"
        />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


<ScrollView
    android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".HomeActivity"
    android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/red_700" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:text="News Topics"
                        android:textColor="@color/overlay_dark_90"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:weightSum="9">

                        <Button
                            android:id="@+id/food"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:text="FOOD"
                            android:background="@color/purple_400"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/overlay_light_90" />

                        <Button
                            android:id="@+id/enter"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:text="ENTERTAINMENT"
                            android:background="@color/blue_400"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/overlay_light_90"/>

                        <Button
                            android:id="@+id/fash"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:text="FASHION"
                            android:background="@color/orange_200"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/overlay_light_90"/>

                        <Button
                            android:id="@+id/life"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:text="LIFESTYLE"
                            android:background="@color/red_600"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/overlay_light_90"/>

                        <Button
                            android:id="@+id/music"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:text="MUSIC"
                            android:background="@color/orange_400"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/overlay_light_90"/>

                        <Button
                            android:id="@+id/news"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:text="NEWS"
                            android:background="@color/purple_300"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/overlay_light_90"/>

                        <Button
                            android:id="@+id/update"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:text="NEWS UPDATES"
                            android:background="@color/yellow_300"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/overlay_light_90"/>

                        <Button
                            android:id="@+id/politics"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:text="POLITICS"
                            android:background="@color/teal_200"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/overlay_light_90"/>

                        <Button
                            android:id="@+id/sports"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:text="SPORTS"
                            android:background="@color/colorAccent"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/overlay_light_90"/>

                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/red_700" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:text="Featured Posts"
                        android:textColor="@color/overlay_dark_90"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/seeFeatured"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:clickable="true"
                        android:gravity="right"
                        android:text="See More"
                        android:textColor="@color/blue_400" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/featured"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:scrollbars="none">

                </android.support.v7.widget.RecyclerView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/red_700" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:text="Latest News"
                        android:textColor="@color/overlay_dark_90"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/seeLatest"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:clickable="true"
                        android:gravity="right"
                        android:text="See More"
                        android:textColor="@color/blue_400" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/latest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">

                </android.support.v7.widget.RecyclerView>
               <!-- <Button
                    android:id="@+id/cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />-->

            </LinearLayout>

        </ScrollView>
        </FrameLayout>

    </LinearLayout>

   <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu"
       android:fitsSystemWindows="true"/>


</android.support.v4.widget.DrawerLayout>
